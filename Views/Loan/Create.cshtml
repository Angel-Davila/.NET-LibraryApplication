@model Library.Models.Loan
<link rel="stylesheet" href="~/Styles/Form.css" type="text/css" />

@{
    ViewBag.Title = "Create";
}

<h2>Register a new loan</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <script>
        function Confirmation() {
            alert("Loan record created succesfuly");
        }
    </script>

    <hr />
    <br />

    <div class="container">
        <div class="row row-cols-1" id="formCenter">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="col" id="inputForm">
                <div class="form-group">
                    @Html.LabelFor(model => model.UserID, "User", htmlAttributes: new { @class = "control-label col-md-12" })
                    <div class="col-md-12" id="input">
                        @Html.DropDownList("UserID", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.UserID, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>


            <div class="col" id="inputForm">
                <div class="form-group">
                    @Html.LabelFor(model => model.BookID, "Book", htmlAttributes: new { @class = "control-label col-md-12" })
                    <div class="col-md-12" id="input">
                        @Html.DropDownList("BookID", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.BookID, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>


            <div class="col" id="inputForm">
                <div class="form-group">
                    @Html.LabelFor(model => model.ReturnDate, "Return date", htmlAttributes: new { @class = "control-label col-md-12" })
                    <div class="col-md-12" id="input">
                        @Html.EditorFor(model => model.ReturnDate, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ReturnDate, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
        <br />
    </div>
    <div class="containerButton">
        <div>
            <input type="submit" value="Create" class="button" onclick="Confirmation()" />
        </div>
    </div>
}
<br />


<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
